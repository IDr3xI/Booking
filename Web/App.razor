@namespace Web

@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Web.Shared
@using Microsoft.AspNetCore.Components.Routing

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Web.Shared.MainLayout)">
                <NotAuthorized>
                    <p>Pro pøístup se prosím pøihlaste.</p>
                    <a href="/login">Pøejít na pøihlášení</a>
                </NotAuthorized>
                <Authorizing>
                    <p>Autorizace probíhá...</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(Web.Shared.MainLayout)">
                <p>Stránka nenalezena.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>